<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_8dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_2dp"
    android:paddingRight="@dimen/padding_2dp"
    android:paddingTop="@dimen/padding_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_menu_linear_layout_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageMenuItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_image_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textMenuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/text_menu_item_text_padding"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_menu_item_text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>